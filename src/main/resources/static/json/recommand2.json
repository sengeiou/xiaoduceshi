{
  "type": "DPL",
  "version": "1.0",
  "mainTemplate": {
    "parameters": [
      "payload"
    ],
    "items": [
      {
        "type": "Image",
        "position": "absolute",
        "top": "0dp",
        "left": "0dp",
        "src": "https://aliyun-hz1.chewrobot.com/xiaoduhome/image/backend.jpg",
        "height": "100%",
        "width": "100%"
      },
      {
        "type": "Header",
        "headerTitle": "推荐页",
        "hasBackIcon": false
      },
      {
        "type": "ScrollView",
        "height": "100%",
        "width": "100%",
        "items": [
          {
            "type": "List",
            "width": "100%",
            "margin-left": "15dp",
            "direction": "horizontal",
            "items": [
              {
                "type": "Container",
                "width":"220dp",
                "margin-left": "15dp",
                "items": [
                  {
                    "type": "Image",
                    "width": "170dp",
                    "height": "170dp",
                    "margin-left": "7dp",
                    "margin-top": "7dp",
                    "position": "absolute",
                    "componentId": "${data.imageId}",
                    "scale-type": "fitXY",
                    "border-radius": "10dp",
                    "src": "${data.imageSrc}",
                    "onClick": [
                      {
                        "type": "SendEvent",
                        "componentId": "${data.imageId}"
                      }
                    ]
                  },
                  {
                    "type": "Frame",
                    "width": "40dp",
                    "height": "40dp",
                    "background-color": "rgba(0,0,0,0.7)",
                    "border-radius": "12dp",
                    "items": [
                      {
                        "type": "Container",
                        "width": "100%",
                        "height": "100%",
                        "align-items":"center",
                        "items": [
                          {
                            "type": "Text",
                            "text": "${data.num}",
                            "font-size": "28dp"
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "type": "Text",
                    "font-size": "25dp",
                    "margin-top": "140dp",
                    "margin-left": "7dp",
                    "text": "${data.imageName}"
                  }
                ]
              }
            ]
          },
          {
            "type": "List",
            "width": "100%",
            "margin-left": "15dp",
            "direction": "horizontal",
            "items": [
              {
                "type": "Container",
                "width":"220dp",
                "margin-left": "15dp",
                "items": [
                  {
                    "type": "Image",
                    "width": "170dp",
                    "height": "170dp",
                    "margin-left": "7dp",
                    "margin-top": "7dp",
                    "position": "absolute",
                    "componentId": "${data.imageId}",
                    "scale-type": "fitXY",
                    "border-radius": "10dp",
                    "src": "${data.imageSrc}",
                    "onClick": [
                      {
                        "type": "SendEvent",
                        "componentId": "${data.imageId}"
                      }
                    ]
                  },
                  {
                    "type": "Frame",
                    "width": "40dp",
                    "height": "40dp",
                    "background-color": "rgba(0,0,0,0.7)",
                    "border-radius": "12dp",
                    "items": [
                      {
                        "type": "Container",
                        "width": "100%",
                        "height": "100%",
                        "align-items":"center",
                        "items": [
                          {
                            "type": "Text",
                            "text": "${data.num}",
                            "font-size": "28dp"
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "type": "Text",
                    "font-size": "25dp",
                    "margin-top": "140dp",
                    "margin-left": "7dp",
                    "text": "${data.imageName}"
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "type": "Container",
        "position": "absolute",
        "width": "100%",
        "left": "0",
        "bottom": "0",
        "items": [
          {
            "type": "Footer",
            "hints": [
              "打开第一个","下一页","上一页","返回"
            ]
          }
        ]
      }
    ]
  }
}